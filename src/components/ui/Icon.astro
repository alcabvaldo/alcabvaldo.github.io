---
// Reusable Icon Component
export interface Props {
  icon: string;
  variant?: 'default' | 'circular' | 'gradient';
  size?: 'small' | 'medium' | 'large' | 'xl';
  color?: string;
  class?: string;
}

const { 
  icon,
  variant = 'default',
  size = 'medium',
  color,
  class: className = ''
} = Astro.props;

const classes = `icon-wrapper icon-wrapper--${variant} icon-wrapper--${size} ${className}`.trim();
---

<div class={classes}>
  <i class={`icon ${icon}`} style={color ? `color: ${color};` : ''}></i>
</div>

<style>
  @import '../../styles/ui/icon.css';
</style>