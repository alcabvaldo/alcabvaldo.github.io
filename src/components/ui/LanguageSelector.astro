---
// Language Selector Component - Refactored for accessibility and performance
import { languages } from '../../data/i18n/languages.js';

const availableLanguages = Object.values(languages);
---

<div class="language-selector">
  <button 
    class="language-toggle" 
    data-language-toggle
    aria-label="Select Language"
    aria-expanded="false"
    aria-haspopup="menu"
  >
    <span class="language-flag" data-current-flag aria-hidden="true">ðŸ‡ºðŸ‡¸</span>
    <span class="language-text" data-current-language>English</span>
    <span class="language-chevron" aria-hidden="true">â–¼</span>
  </button>
  
  <div 
    class="language-dropdown" 
    data-language-dropdown
    role="menu"
    aria-labelledby="language-toggle"
  >
    <div class="language-dropdown-header">
      <h3 id="language-menu-title">Choose Language</h3>
      <p>Select your preferred language</p>
    </div>
    
    <div class="language-grid" role="group" aria-labelledby="language-menu-title">
      {availableLanguages.map(language => (
        <button 
          class="language-option" 
          data-language-option={language.id}
          role="menuitem"
          title={`Switch to ${language.name}`}
          aria-label={`Switch to ${language.name} (${language.nativeName})`}
        >
          <div class="language-flag-large" aria-hidden="true">{language.flag}</div>
          <div class="language-info">
            <span class="language-name">{language.name}</span>
            <span class="language-native">{language.nativeName}</span>
          </div>
          <div class="language-check" aria-hidden="true">âœ“</div>
        </button>
      ))}
    </div>
  </div>
</div>

<style>
  .language-selector {
    position: relative;
    z-index: 1040;
  }

  .language-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-sm);
    font-weight: var(--font-medium);
    cursor: pointer;
    transition: var(--transition-all);
    white-space: nowrap;
  }

  .language-toggle:hover {
    background: transparent !important;
    color: var(--color-primary) !important;
    transform: none !important;
    box-shadow: none !important;
    border-color: transparent !important;
  }

  .language-toggle:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .language-toggle[aria-expanded="true"] .language-chevron {
    transform: rotate(180deg);
  }

  .language-flag {
    font-size: 1rem;
    line-height: 1;
  }

  .language-text {
    font-weight: var(--font-medium);
  }

  .language-chevron {
    font-size: 0.75rem;
    transition: transform 0.2s ease;
    margin-left: auto;
  }

  .language-dropdown {
    position: absolute;
    top: calc(100% + var(--space-sm));
    right: 0;
    min-width: 280px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(20px);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .language-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .language-dropdown-header {
    padding: var(--space-lg);
    border-bottom: 1px solid var(--border-light);
    text-align: center;
  }

  .language-dropdown-header h3 {
    margin: 0 0 var(--space-xs) 0;
    color: var(--text-heading);
    font-size: var(--font-lg);
    font-weight: var(--font-semibold);
  }

  .language-dropdown-header p {
    margin: 0;
    color: var(--text-muted);
    font-size: var(--font-sm);
  }

  .language-grid {
    padding: var(--space-md);
    display: grid;
    gap: var(--space-sm);
  }

  .language-option {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
    background: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition-all);
    text-align: left;
    width: 100%;
    position: relative;
  }

  .language-option:hover {
    background: transparent;
    border-color: transparent;
    transform: none;
  }

  .language-option:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .language-option.active {
    background: transparent;
    border-color: transparent;
  }

  .language-option.active .language-check {
    opacity: 1;
    color: var(--color-primary);
  }

  .language-flag-large {
    font-size: 1.5rem;
    line-height: 1;
    width: 32px;
    text-align: center;
    flex-shrink: 0;
  }

  .language-info {
    flex: 1;
    min-width: 0;
  }

  .language-name {
    display: block;
    color: var(--text-primary);
    font-weight: var(--font-medium);
    font-size: var(--font-sm);
    margin-bottom: 2px;
  }

  .language-native {
    display: block;
    color: var(--text-muted);
    font-size: var(--font-xs);
    line-height: 1.3;
  }

  .language-check {
    font-size: var(--font-lg);
    opacity: 0;
    transition: var(--transition-all);
    flex-shrink: 0;
    width: 20px;
    text-align: center;
  }

  /* Mobile responsive */
  @media (max-width: 480px) {
    .language-dropdown {
      left: 0;
      right: 0;
      min-width: unset;
      width: calc(100vw - 2rem);
      max-width: 280px;
      margin: 0 auto;
    }

    .language-toggle {
      font-size: var(--font-xs);
      padding: var(--space-xs) var(--space-sm);
    }

    .language-text {
      display: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .language-toggle,
    .language-dropdown,
    .language-option {
      border-width: 2px;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .language-toggle,
    .language-dropdown,
    .language-option,
    .language-chevron {
      transition: none;
    }
  }
</style> 