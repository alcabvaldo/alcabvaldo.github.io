---
// Reusable Section Header Component
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
  'data-sal'?: string;
  'data-sal-delay'?: string | number;
  'data-sal-duration'?: string | number;
}

const { 
  title,
  subtitle,
  centered = true,
  class: className = '',
  ...props
} = Astro.props;

const classes = `section-header ${centered ? 'section-header--centered' : ''} ${className}`.trim();
---

<header class={classes} {...props}>
  <h2 class="section-header__title" data-sal="slide-up" data-sal-delay="100">
    {title}
  </h2>
  {subtitle && (
    <p class="section-header__subtitle" data-sal="slide-up" data-sal-delay="200">
      {subtitle}
    </p>
  )}
  <slot />
</header>

<style>
  @import '../../styles/ui/section-header.css';
</style>