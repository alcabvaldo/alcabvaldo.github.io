---
// Theme Selector Component - Refactored for accessibility and performance
import { themes } from '../../data/config/themes.js';

const availableThemes = Object.values(themes);
---

<div class="theme-selector">
  <button 
    class="theme-toggle" 
    data-theme-toggle
    aria-label="Select Theme"
    aria-expanded="false"
    aria-haspopup="menu"
  >
    <span class="theme-text">Theme</span>
    <span class="theme-chevron" aria-hidden="true">▼</span>
  </button>
  
  <div 
    class="theme-dropdown" 
    data-theme-dropdown
    role="menu"
    aria-labelledby="theme-toggle"
  >
    <div class="theme-dropdown-header">
      <h3 id="theme-menu-title">Choose Theme</h3>
      <p>Select your preferred dark theme</p>
    </div>
    
    <div class="theme-grid" role="group" aria-labelledby="theme-menu-title">
      {availableThemes.map(theme => (
        <button 
          class="theme-option" 
          data-theme-option={theme.id}
          role="menuitem"
          title={theme.description}
          aria-label={`Select ${theme.name} theme: ${theme.description}`}
        >
          <div class="theme-preview" style={`
            background: linear-gradient(135deg, 
              ${theme.colors['--bg-primary']} 0%, 
              ${theme.colors['--bg-secondary']} 50%,
              ${theme.colors['--bg-tertiary']} 100%
            );
            border: 2px solid ${theme.colors['--color-primary']};
          `}>
            <div class="theme-accent" style={`background: ${theme.colors['--color-primary']};`}></div>
            <div class="theme-accent" style={`background: ${theme.colors['--color-secondary']};`}></div>
            <div class="theme-accent" style={`background: ${theme.colors['--color-accent']};`}></div>
          </div>
          <div class="theme-info">
            <span class="theme-name">{theme.name}</span>
            <span class="theme-desc">{theme.description}</span>
          </div>
          <div class="theme-check" aria-hidden="true">✓</div>
        </button>
      ))}
    </div>
  </div>
</div>

<style>
  .theme-selector {
    position: relative;
    z-index: 1050;
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-sm);
    font-weight: var(--font-medium);
    cursor: pointer;
    transition: var(--transition-all);
    white-space: nowrap;
  }

  .theme-toggle:hover {
    background: transparent !important;
    color: var(--color-primary) !important;
    transform: none !important;
    box-shadow: none !important;
    border-color: transparent !important;
  }

  .theme-toggle:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .theme-toggle[aria-expanded="true"] .theme-chevron {
    transform: rotate(180deg);
  }

  .theme-icon {
    font-size: 1rem;
  }

  .theme-text {
    font-weight: var(--font-medium);
  }

  .theme-chevron {
    font-size: 0.75rem;
    transition: transform 0.2s ease;
    margin-left: auto;
  }

  .theme-dropdown {
    position: absolute;
    top: calc(100% + var(--space-sm));
    right: 0;
    min-width: 320px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(20px);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .theme-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .theme-dropdown-header {
    padding: var(--space-lg);
    border-bottom: 1px solid var(--border-light);
    text-align: center;
  }

  .theme-dropdown-header h3 {
    margin: 0 0 var(--space-xs) 0;
    color: var(--text-heading);
    font-size: var(--font-lg);
    font-weight: var(--font-semibold);
  }

  .theme-dropdown-header p {
    margin: 0;
    color: var(--text-muted);
    font-size: var(--font-sm);
  }

  .theme-grid {
    padding: var(--space-md);
    display: grid;
    gap: var(--space-sm);
  }

  .theme-option {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
    background: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition-all);
    text-align: left;
    width: 100%;
    position: relative;
  }

  .theme-option:hover {
    background: transparent;
    border-color: transparent;
    transform: none;
  }

  .theme-option:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .theme-option.active {
    background: transparent;
    border-color: transparent;
  }

  .theme-option.active .theme-check {
    opacity: 1;
    color: var(--color-primary);
  }

  .theme-preview {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-sm);
    position: relative;
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    padding: 4px;
    gap: 2px;
  }

  .theme-accent {
    width: 8px;
    height: 16px;
    border-radius: 2px;
    opacity: 0.8;
  }

  .theme-accent:nth-child(2) {
    height: 12px;
  }

  .theme-accent:nth-child(3) {
    height: 20px;
  }

  .theme-info {
    flex: 1;
    min-width: 0;
  }

  .theme-name {
    display: block;
    color: var(--text-primary);
    font-weight: var(--font-medium);
    font-size: var(--font-sm);
    margin-bottom: 2px;
  }

  .theme-desc {
    display: block;
    color: var(--text-muted);
    font-size: var(--font-xs);
    line-height: 1.3;
  }

  .theme-check {
    font-size: var(--font-lg);
    opacity: 0;
    transition: var(--transition-all);
    flex-shrink: 0;
    width: 20px;
    text-align: center;
  }

  /* Mobile responsive */
  @media (max-width: 480px) {
    .theme-dropdown {
      left: 0;
      right: 0;
      min-width: unset;
      width: calc(100vw - 2rem);
      max-width: 320px;
      margin: 0 auto;
    }

    .theme-toggle {
      font-size: var(--font-xs);
      padding: var(--space-xs) var(--space-sm);
    }

    .theme-text {
      display: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .theme-toggle,
    .theme-dropdown,
    .theme-option {
      border-width: 2px;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .theme-toggle,
    .theme-dropdown,
    .theme-option,
    .theme-chevron {
      transition: none;
    }
  }
</style> 