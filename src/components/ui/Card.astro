---
// Reusable Card Component
export interface Props {
  variant?: 'default' | 'feature' | 'project' | 'skill';
  class?: string;
  'data-sal'?: string;
  'data-sal-delay'?: string | number;
  'data-sal-duration'?: string | number;
}

const { 
  variant = 'default',
  class: className = '',
  ...props
} = Astro.props;

const classes = `card card--${variant} ${className}`.trim();
---

<div class={classes} {...props}>
  <slot />
</div>

<style>
  @import '../../styles/ui/card.css';
</style>