---
// Reusable Progress Bar Component
export interface Props {
  percentage: number;
  color?: string;
  animated?: boolean;
  class?: string;
  'data-sal'?: string;
  'data-sal-delay'?: string | number;
  'data-sal-duration'?: string | number;
}

const { 
  percentage,
  color = '#4acaa8',
  animated = true,
  class: className = '',
  ...props
} = Astro.props;

const classes = `progress-bar ${animated ? 'progress-bar--animated' : ''} ${className}`.trim();
---

<div class={classes} {...props}>
  <div 
    class="progress-bar__fill" 
    style={`width: ${percentage}%; background-color: ${color};`}
  ></div>
</div>

<style>
  @import '../../styles/ui/progress-bar.css';
</style>