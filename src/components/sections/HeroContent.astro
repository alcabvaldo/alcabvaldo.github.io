---
// Hero Content Component
import Button from '../ui/Button.astro';

export interface Props {
  greeting: string;
  name: string;
  subtitle: string;
  description: string;
  tagline: string;
  socialLinks: Array<{
    url: string;
    icon: string;
    label: string;
  }>;
  'data-sal'?: string;
  'data-sal-delay'?: string | number;
  'data-sal-duration'?: string | number;
}

const { 
  greeting,
  name,
  subtitle,
  description,
  tagline,
  socialLinks,
  ...props
} = Astro.props;
---

<div class="hero-content" {...props}>
  <!-- Background decoration -->
  <div class="hero-background">
    <div class="hero-pattern"></div>
    <div class="hero-gradient-overlay"></div>
  </div>

  <!-- Main content -->
  <div class="hero-main">
    <header class="hero-header">
      <div class="hero-badge">
        <span class="badge-icon">âœ¨</span>
        <span class="badge-text">Available for work</span>
      </div>
      
      <h1 class="hero-title display">
        <span class="title-greeting">{greeting}</span>
        <span class="title-name gradient-text">{name}</span>
      </h1>
      
      <p class="hero-subtitle lead">
        {subtitle}
      </p>
    </header>
    
    <div class="hero-description">
      <p class="description-text" set:html={description}></p>
      <p class="hero-tagline">{tagline}</p>
    </div>

    <div class="hero-actions">
      <div class="hero-cta">
        <Button variant="primary" size="large" href="#projects">
          <span class="btn-icon">ðŸš€</span>
          View My Work
        </Button>
        <Button variant="secondary" size="large" href="#contact">
          <span class="btn-icon">ðŸ’¬</span>
          Let's Talk
        </Button>
      </div>
      
      <div class="hero-social">
        <span class="social-label">Connect with me</span>
        <ul class="social-list">
          {socialLinks.map(link => (
            <li>
              <a href={link.url} class={`social-link icon brands ${link.icon}`} target="_blank" rel="noopener">
                <span class="label">{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Stats or highlights -->
  <div class="hero-stats">
    <div class="stat-item">
      <span class="stat-number">3+</span>
      <span class="stat-label">Years Experience</span>
    </div>
    <div class="stat-item">
      <span class="stat-number">8+</span>
      <span class="stat-label">Projects Completed</span>
    </div>
    <div class="stat-item">
      <span class="stat-number">15+</span>
      <span class="stat-label">Technologies</span>
    </div>
  </div>
</div>

<style>
  @import '../../styles/sections/hero-content.css';
</style>