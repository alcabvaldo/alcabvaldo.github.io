---
// Hero Image Component
export interface Props {
  src: string;
  alt: string;
  'data-sal'?: string;
  'data-sal-delay'?: string | number;
  'data-sal-duration'?: string | number;
}

const { src, alt, ...props } = Astro.props;
---

<div class="hero-image-container" {...props}>
  <span class="image fit blackAndWhite">
    <img src={src} alt={alt} />
  </span>
  <div class="image-overlay"></div>
</div>

<style>
  .hero-image-container {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .hero-image-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(74, 202, 168, 0.2) 0%, rgba(74, 202, 168, 0.05) 100%);
    z-index: 1;
    pointer-events: none;
  }

  .hero-image-container img {
    transition: transform 0.5s ease;
  }

  .hero-image-container:hover img {
    transform: scale(1.05);
  }
</style>