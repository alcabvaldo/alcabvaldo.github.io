---
// About section component - modular and reusable
import { aboutData, themeConfig } from '../data/index.js';
import SectionHeader from './ui/SectionHeader.astro';
import FeatureCard from './sections/FeatureCard.astro';
---

<article id={aboutData.sectionId} class={aboutData.layout.wrapperClass}>
  <div 
    class={aboutData.layout.containerClass}
    data-sal="fade"
    data-sal-duration="800"
  >
    <SectionHeader 
      title={aboutData.title}
      subtitle={aboutData.subtitle}
    />

    <div class="row gtr-uniform">
      <div class="col-8 col-12-medium">
        <div class="content">
          <p data-sal="fade" data-sal-delay="300">{aboutData.summary.intro}</p>
          <p data-sal="fade" data-sal-delay="400">{aboutData.summary.focus}</p>
          <p data-sal="fade" data-sal-delay="500">{aboutData.summary.goals}</p>
        </div>
      </div>

      <div class="col-4 col-12-medium">
        <h3 data-sal="slide-left" data-sal-delay="300">Current Focus</h3>
        <ul class="alt">
          {aboutData.currentFocus.map((item, index) => (
            <li data-sal="slide-left" data-sal-delay={400 + (index * 100)}>{item}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="row gtr-uniform highlights-grid" style="margin-top: 3em;">
      {aboutData.highlights.map((highlight, index) => (
        <div class="col-3 col-6-medium col-12-small">
          <FeatureCard 
            title={highlight.title}
            description={highlight.description}
            icon={`solid ${highlight.icon}`}
            data-sal="zoom-in"
            data-sal-delay={300 + (index * 100)}
          />
        </div>
      ))}
    </div>
  </div>
</article>

