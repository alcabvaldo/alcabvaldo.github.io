	html5up.net | @ajlkn
	Free for personal and commercial use under the CCA 3.0 license (html5up.net/license)
-->
<html>
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.svg">
    <!-- SAL.js CSS for scroll animations -->
    <link rel="stylesheet" href="https://unpkg.com/sal.js@0.8.5/dist/sal.css">
  </head>
  <body class="is-preload">
    <slot />
    
    <!-- Scripts - Exact copy from current site -->
    <script is:inline src="/assets/js/jquery.min.js"></script>
    <script is:inline src="/assets/js/jquery.scrolly.min.js"></script>
    <script is:inline src="/assets/js/jquery.scrollex.min.js"></script>
    <script is:inline src="/assets/js/browser.min.js"></script>
    <script is:inline src="/assets/js/breakpoints.min.js"></script>
    <script is:inline src="/assets/js/util.js"></script>
    <script is:inline src="/assets/js/main.js"></script>
    
    <!-- SAL.js for enhanced scroll animations -->
    <script is:inline src="https://unpkg.com/sal.js@0.8.5/dist/sal.js"></script>
    <script is:inline>
      // Initialize SAL.js alongside existing jQuery animations
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof sal !== 'undefined') {
          sal({
            threshold: 0.2,
            once: true,
            duration: 600
          });
        }
      });
    </script>
  </body>
</html>